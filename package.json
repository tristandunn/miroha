{
  "name": "miroha",
  "private": true,
  "scripts": {
    "build": "node config/esbuild.config.js",
    "fix:css": "rustywind --custom-regex '@apply ([_a-zA.-Z0-9-:\\[\\] ]+);' --write ./app/assets/stylesheets/**/*",
    "fix:html": "rustywind --write app/views",
    "lint": "eslint app config spec/javascripts *.js",
    "lint:css": "stylelint app/assets/stylesheets/**/*.css",
    "outdated": "yarn upgrade-interactive",
    "test": "NODE_ENV=test NODE_PATH=app/javascript mocha --config spec/javascripts/mocharc.js spec/javascripts",
    "test:coverage": "NODE_ENV=test NODE_PATH=app/javascript nyc mocha --config spec/javascripts/mocharc.js spec/javascripts"
  },
  "dependencies": {
    "@hotwired/stimulus": "3.2.1",
    "@hotwired/turbo-rails": "7.2.4",
    "esbuild": "0.15.18"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@babel/eslint-parser": "7.19.1",
    "@babel/preset-env": "7.20.2",
    "@babel/register": "7.18.9",
    "babel-plugin-dynamic-import-node": "2.3.3",
    "babel-plugin-istanbul": "6.1.1",
    "chai": "4.3.7",
    "eslint": "8.29.0",
    "jsdom": "20.0.3",
    "mocha": "10.1.0",
    "nyc": "15.1.0",
    "sinon": "15.0.0",
    "sinon-chai": "3.7.0",
    "stylelint": "14.16.0",
    "stylelint-config-standard": "29.0.0"
  },
  "engines": {
    "node": "18.12.0"
  },
  "packageManager": "yarn@3.2.4"
}
