<%# locals: () %>
<main class="flex justify-center px-4 min-h-screen bg-gradient-to-br from-slate-50 via-slate-100 to-slate-50">
  <div class="pt-24 w-full max-w-md">
    <div class="p-8 rounded-2xl border border-gray-200 shadow-2xl bg-white/90 backdrop-blur-sm">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold text-slate-800"><%= t(".header") %></h1>
        <div class="mx-auto w-16 h-1 bg-gradient-to-r rounded-full from-slate-700 to-slate-900"></div>
      </div>

      <% if flash[:warning].present? %>
        <div class="p-4 mb-6 bg-yellow-100 rounded-lg border border-yellow-300">
          <p class="text-sm text-center text-yellow-800">
            <%= flash[:warning] %>
          </p>
        </div>
      <% end %>

      <% if @characters.present? %>
        <ul id="characters" class="mb-8 space-y-3">
          <% @characters.each do |character| %>
            <li>
              <% if character.recent? %>
                <div class="block p-4 w-full font-semibold text-left text-gray-500 bg-gray-100 rounded-lg border border-gray-300 cursor-not-allowed">
                  <%= character.name %>
                </div>
              <% else %>
                <%= button_to character.name, select_character_path(character), class: "block p-4 w-full font-semibold text-left bg-gray-50 border border-gray-300 rounded-lg text-slate-900 hover:bg-slate-100 hover:border-slate-400 cursor-pointer" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="p-6 mb-8 text-center bg-gray-50 rounded-lg border border-gray-200">
          <p class="mb-4 text-slate-600">
            <%= t(".empty") %>
          </p>
          <%= link_to t(".new_character"), new_character_path, class: "inline-block px-6 py-2 bg-gradient-to-r from-slate-700 to-slate-800 text-white rounded-lg hover:from-slate-600 hover:to-slate-700 cursor-pointer" %>
        </div>
      <% end %>

      <%= form_tag sessions_path, class: "text-center", method: :delete do %>
        <button type="submit" class="text-sm underline cursor-pointer text-slate-500 underline-offset-2 hover:text-slate-700">
          <%= t(".sign_out") %>
        </button>
      <% end %>
    </div>
  </div>
</main>
