<main class="py-12 w-screen lg:p-12">
  <div class="py-12 px-8 mx-auto w-full max-w-lg">
    <div class="mb-12 text-center">
      <h1 class="text-3xl font-bold text-gray-700"><%= t(".header") %></h1>
    </div>

    <%= form_for @form, url: characters_path, html: { class: "highlight-errors" } do |form| %>
      <div>
        <%= form.label :name, class: "block mb-1 text-sm font-medium text-gray-800" %>
        <%= form.text_field :name, autocomplete: false, autofocus: true, class: "w-full text-gray-800 border-gray-400 rounded focus:ring-2 focus:ring-green-200 focus:border-green-300", minlength: Character::MINIMUM_NAME_LENGTH, maxlength: Character::MAXIMUM_NAME_LENGTH, placeholder: t(".placeholder"), required: true %>
        <% if @form.errors[:name].present? %>
          <p class="mt-2 text-xs text-red-700"><%= Character.human_attribute_name(:name).humanize %> <%= @form.errors[:name].first %>.</p>
        <% end %>
      </div>

      <button class="block p-4 mx-auto mt-6 w-4/5 text-lg font-semibold text-center text-white bg-green-600 rounded-lg hover:bg-green-500 focus:outline-none focus:shadow-green-200" type="submit">
        <%= t(".submit") %>
      </button>
    <% end %>
  </div>
</main>
