<%# locals: () %>
<%= render "shared/standalone_header", title: t(".header") %>

<%= form_for @form, url: characters_path, html: { class: "highlight-errors space-y-6", data: { turbo: false } } do |form| %>
  <%= render "shared/standalone_form_field", form: form, field: :name, type: :text_field, autocomplete: false, autofocus: true, minlength: Character::MINIMUM_NAME_LENGTH, maxlength: Character::MAXIMUM_NAME_LENGTH, placeholder: t(".placeholder"), required: true %>

  <%= render "shared/standalone_button", text: t(".submit"), type: "submit" %>
<% end %>
