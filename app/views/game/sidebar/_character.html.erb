<%# locals: (character:) %>
<div id="character">
  <%= render "game/sidebar/character/experience", character: character %>

  <div class="p-4 bg-gray-900">
    <div>
      <h1 class="float-left text-xl font-medium leading-none text-gray-300">
        <%= character.name %>
      </h1>
      <h2 class="float-right mt-1 text-sm leading-none text-gray-500">
        <%= t(".level", level: character.level) %>
      </h2>
    </div>

    <div class="clear-both py-2">
      <div class="float-left relative h-2 bg-red-900 rounded" title="<%= number_with_delimiter character.health.current %> / <%= number_with_delimiter character.health.maximum %>" style="width: 45%">
        <div class="absolute inset-0 h-full bg-red-700 rounded" style="width: <%= character.health.remaining_percentage %>%;"></div>
      </div>

      <div class="float-right relative h-2 bg-blue-900 rounded" title="6 / 10" style="width: 45%">
        <div class="absolute inset-0 h-full bg-blue-700 rounded" style="width: 60%;"></div>
      </div>
    </div>
  </div>
</div>
