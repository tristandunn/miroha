<% if target.nil? %>
  <%= render "commands/whisper/unknown", target_name: target_name %>
<% elsif target == character %>
  <%= render "commands/whisper/self" %>
<% else %>
  <%= turbo_stream.append("messages", partial: "commands/whisper/source", locals: { character: character, message: message, target_name: target_name }) %>
<% end %>
