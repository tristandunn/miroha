<main class="w-screen py-12 lg:p-12 lg:min-h-screen lg:flex">
  <div class="self-center w-full max-w-lg px-8 py-12 mx-auto">
    <div class="mb-12 text-center">
      <h1 class="text-3xl font-bold text-gray-700"><%= t(".header") %></h1>
    </div>

    <%= form_for @form, url: accounts_path, html: { class: "highlight-errors" } do |form| %>
      <div>
        <%= form.label :email, class: "block mb-1 text-sm font-medium text-gray-800" %>
        <%= form.email_field :email, autocomplete: "email", autofocus: true, class: "w-full text-gray-800 form-input", maxlength: Account::MAXIMUM_EMAIL_LENGTH, placeholder: t(".placeholder"), required: true %>
        <% if @form.errors[:email].present? %>
          <p class="mt-2 text-xs text-red-700"><%= Account.human_attribute_name(:email).humanize %> <%= @form.errors[:email].first %>.</p>
        <% end %>
      </div>

      <div class="mt-6">
        <%= form.label :password, class: "block mb-1 text-sm font-medium text-gray-800" %>
        <%= form.password_field :password, class: "w-full text-gray-800 form-input focus:outline-none focus:shadow-green-200 focus:border-green-300", minlength: Account::MINIMUM_PASSWORD_LENGTH, required: true %>
        <% if @form.errors[:password].present? %>
          <p class="mt-2 text-xs text-red-700"><%= Account.human_attribute_name(:password).humanize %> <%= @form.errors[:password].first %>.</p>
        <% end %>
      </div>

      <button class="block w-4/5 p-4 mx-auto mt-6 text-lg font-semibold text-center text-white bg-green-600 rounded-lg focus:outline-none hover:bg-green-500 focus:shadow-green-200" type="submit">
        <%= t(".submit") %>
      </button>
    <% end %>
  </div>
</main>
