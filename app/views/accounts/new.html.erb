<%# locals: () %>
<%= render "shared/standalone_header", title: t(".header") %>

<%= form_for @form, url: accounts_path, html: { class: "highlight-errors space-y-6", data: { turbo: false } } do |form| %>
  <%= render "shared/standalone_form_field", form: form, field: :email, type: :email_field, autocomplete: "email", autofocus: true, maxlength: Account::MAXIMUM_EMAIL_LENGTH, placeholder: t(".placeholder"), required: true %>

  <%= render "shared/standalone_form_field", form: form, field: :password, type: :password_field, minlength: Account::MINIMUM_PASSWORD_LENGTH, required: true %>

  <%= render "shared/standalone_button", text: t(".submit"), type: "submit" %>
<% end %>
