<%# locals: () %>
<main class="flex justify-center px-4 min-h-screen bg-gradient-to-br from-slate-50 via-slate-100 to-slate-50">
  <div class="pt-24 w-full max-w-md">
    <div class="p-8 rounded-2xl border border-gray-200 shadow-2xl bg-white/90 backdrop-blur-sm">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold text-slate-800"><%= t(".header") %></h1>
        <div class="mx-auto w-16 h-1 bg-gradient-to-r rounded-full from-slate-700 to-slate-900"></div>
      </div>

      <%= form_for @form, url: accounts_path, html: { class: "highlight-errors space-y-6", data: { turbo: false } } do |form| %>
        <div class="space-y-2">
          <%= form.label :email, class: "block text-sm font-medium text-slate-700" %>
          <%= form.email_field :email, autocomplete: "email", autofocus: true, class: "w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-slate-900 placeholder-gray-500 focus:ring-2 focus:ring-slate-500 focus:border-slate-500", maxlength: Account::MAXIMUM_EMAIL_LENGTH, placeholder: t(".placeholder"), required: true %>
          <% if @form.errors[:email].present? %>
            <p class="text-sm text-red-600"><%= Account.human_attribute_name(:email).humanize %> <%= @form.errors[:email].first %>.</p>
          <% end %>
        </div>

        <div class="space-y-2">
          <%= form.label :password, class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password, class: "w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-slate-900 placeholder-gray-500 focus:ring-2 focus:ring-slate-500 focus:border-slate-500", minlength: Account::MINIMUM_PASSWORD_LENGTH, required: true %>
          <% if @form.errors[:password].present? %>
            <p class="text-sm text-red-600"><%= Account.human_attribute_name(:password).humanize %> <%= @form.errors[:password].first %>.</p>
          <% end %>
        </div>

        <button class="py-3 w-full text-lg font-semibold text-white bg-gradient-to-r rounded-lg shadow-lg cursor-pointer focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:outline-none from-slate-700 to-slate-800 hover:from-slate-600 hover:to-slate-700 focus:ring-slate-500" type="submit">
          <%= t(".submit") %>
        </button>
      <% end %>
    </div>
  </div>
</main>
