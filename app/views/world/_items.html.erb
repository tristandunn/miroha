<%# locals: (current_room:) %>
<div class="group">
  <div class="flex justify-between items-center mb-3">
    <h3 class="text-sm font-semibold text-slate-300 flex items-center gap-2">
      <svg class="w-4 h-4 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
      Items
    </h3>
    <button
      data-action="click->world-editor#toggleItemForm"
      class="px-3 py-1.5 bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-500 hover:to-orange-500 rounded-lg text-xs font-medium text-white shadow-lg shadow-amber-500/20 transition-all duration-200 hover:shadow-amber-500/30">
      + Add Item
    </button>
  </div>

  <!-- Item Form (hidden by default) -->
  <div class="hidden mb-4 p-4 bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50" data-world-editor-target="itemForm">
    <input
      type="text"
      data-world-editor-target="itemName"
      placeholder="Item Name"
      autocomplete="off"
      class="w-full px-3 py-2 bg-slate-900/50 border border-slate-700/50 rounded-lg mb-3 text-sm text-slate-100 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all">
    <div class="flex gap-2">
      <button
        data-action="click->world-editor#createItem"
        class="flex-1 px-4 py-2 bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-500 hover:to-orange-500 rounded-lg text-sm font-medium text-white transition-all">
        Create
      </button>
      <button
        data-action="click->world-editor#toggleItemForm"
        class="px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 rounded-lg text-sm font-medium text-slate-300 transition-all">
        Cancel
      </button>
    </div>
  </div>

  <!-- Item List -->
  <div data-world-editor-target="itemList" class="space-y-2">
    <% if current_room.persisted? %>
      <% current_room.items.each do |item| %>
        <div class="flex justify-between items-center p-3 bg-slate-800/50 backdrop-blur-sm rounded-lg border border-slate-700/50 text-sm text-slate-100 hover:bg-slate-800/70 transition-all group/item">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center text-white text-xs font-bold">
              <%= item.name[0].upcase %>
            </div>
            <span class="font-medium"><%= item.name %></span>
          </div>
          <button
            data-action="click->world-editor#deleteItem"
            data-id="<%= item.id %>"
            class="opacity-0 group-hover/item:opacity-100 px-3 py-1.5 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg text-xs font-medium transition-all border border-red-500/30">
            Delete
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
