<%# locals: (current_room:) %>
<div class="mb-6">
  <div class="flex justify-between items-center mb-2">
    <h3 class="text-lg font-medium text-gray-100">Items</h3>
    <button
      data-action="click->world-editor#toggleItemForm"
      class="px-2 py-1 bg-blue-600 hover:bg-blue-700 rounded text-sm text-white"
    >+ Add</button>
  </div>

  <!-- Item Form (hidden by default) -->
  <div class="hidden mb-3 p-3 bg-gray-700 rounded" data-world-editor-target="itemForm">
    <input
      type="text"
      data-world-editor-target="itemName"
      placeholder="Item Name"
      class="w-full px-2 py-1 bg-gray-800 border border-gray-600 rounded mb-2 text-sm text-white"
    />
    <div class="flex gap-2">
      <button
        data-action="click->world-editor#createItem"
        class="px-3 py-1 bg-green-600 hover:bg-green-700 rounded text-sm text-white"
      >Create</button>
      <button
        data-action="click->world-editor#toggleItemForm"
        class="px-3 py-1 bg-gray-600 hover:bg-gray-500 rounded text-sm text-white"
      >Cancel</button>
    </div>
  </div>

  <!-- Item List -->
  <div data-world-editor-target="itemList" class="space-y-2">
    <% if current_room.persisted? %>
      <% current_room.items.each do |item| %>
        <div class="flex justify-between items-center p-2 bg-gray-700 rounded text-sm text-white">
          <span><%= item.name %></span>
          <button
            data-action="click->world-editor#deleteItem"
            data-id="<%= item.id %>"
            class="text-red-400 hover:text-red-300"
          >Delete</button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
