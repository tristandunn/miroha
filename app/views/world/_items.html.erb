<%# locals: (current_room:) %>
<div class="w-64 flex-shrink-0 border-r border-slate-800 p-3 h-full overflow-y-auto flex flex-col">
  <div class="flex items-center justify-between mb-2">
    <label class="text-[10px] font-medium text-slate-500 uppercase tracking-wider">
      Items
      <% if current_room.persisted? && current_room.items.any? %>
        <span class="text-slate-600">(<%= current_room.items.count %>)</span>
      <% end %>
    </label>
    <button
      data-action="click->world-editor#toggleItemForm"
      class="px-1.5 py-0.5 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded text-[10px] text-slate-400 transition-colors">
      +
    </button>
  </div>

  <!-- Form -->
  <div class="hidden mb-2 p-2 bg-slate-950 border border-slate-800 rounded" data-world-editor-target="itemForm">
    <input
      type="text"
      data-world-editor-target="itemName"
      placeholder="Name"
      autocomplete="off"
      class="w-full px-2 py-1 bg-slate-900 border border-slate-800 rounded text-xs text-slate-100 placeholder-slate-600 focus:outline-none focus:border-slate-700 mb-1.5">
    <div class="flex gap-1">
      <button
        data-action="click->world-editor#createItem"
        class="flex-1 px-2 py-1 bg-slate-800 hover:bg-slate-700 rounded text-[10px] text-slate-200 transition-colors">
        Create
      </button>
      <button
        data-action="click->world-editor#toggleItemForm"
        class="px-2 py-1 text-[10px] text-slate-500 hover:text-slate-400 transition-colors">
        Cancel
      </button>
    </div>
  </div>

  <!-- List -->
  <div data-world-editor-target="itemList" class="space-y-1 flex-1 overflow-y-auto">
    <% if current_room.persisted? && current_room.items.any? %>
      <% current_room.items.each do |item| %>
        <div class="flex items-center justify-between px-2 py-1 bg-slate-950 border border-slate-800 rounded text-xs hover:bg-slate-900 transition-colors group">
          <span class="text-slate-300 truncate"><%= item.name %></span>
          <button
            data-action="click->world-editor#deleteItem"
            data-id="<%= item.id %>"
            class="opacity-0 group-hover:opacity-100 text-xs text-slate-600 hover:text-red-500 transition-all ml-2">
            Ã—
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
