<%# locals: (current_room:) %>
<div>
  <div class="flex items-center justify-between mb-1.5">
    <label class="text-xs font-medium text-slate-400 uppercase tracking-wide">
      Items
      <% if current_room.persisted? && current_room.items.any? %>
        <span class="ml-1 text-slate-500">(<%= current_room.items.count %>)</span>
      <% end %>
    </label>
    <button
      data-action="click->world-editor#toggleItemForm"
      class="px-2 py-0.5 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded text-xs text-slate-300 transition-colors">
      + Add
    </button>
  </div>

  <!-- Item Form -->
  <div class="hidden mb-2 p-2 bg-slate-800 border border-slate-700 rounded" data-world-editor-target="itemForm">
    <input
      type="text"
      data-world-editor-target="itemName"
      placeholder="Item Name"
      autocomplete="off"
      class="w-full px-2 py-1.5 bg-slate-900 border border-slate-700 rounded text-sm text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-600 mb-2">
    <div class="flex gap-1.5">
      <button
        data-action="click->world-editor#createItem"
        class="flex-1 px-2 py-1.5 bg-slate-700 hover:bg-slate-600 rounded text-xs text-slate-100 transition-colors">
        Create
      </button>
      <button
        data-action="click->world-editor#toggleItemForm"
        class="px-2 py-1.5 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded text-xs text-slate-400 transition-colors">
        Cancel
      </button>
    </div>
  </div>

  <!-- Item List -->
  <div data-world-editor-target="itemList" class="space-y-1">
    <% if current_room.persisted? && current_room.items.any? %>
      <% current_room.items.each do |item| %>
        <div class="flex items-center justify-between px-2 py-1.5 bg-slate-800 border border-slate-700 rounded text-sm hover:bg-slate-750 transition-colors group">
          <span class="text-slate-200"><%= item.name %></span>
          <button
            data-action="click->world-editor#deleteItem"
            data-id="<%= item.id %>"
            class="opacity-0 group-hover:opacity-100 text-xs text-slate-500 hover:text-red-400 transition-all">
            Ã—
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
