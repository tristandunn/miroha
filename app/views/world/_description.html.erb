<%# locals: (current_room:) %>
<div class="group">
  <label class="block text-sm font-semibold text-slate-300 mb-2 flex items-center gap-2">
    <svg class="w-4 h-4 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
    </svg>
    Room Description
  </label>
  <textarea
    data-world-editor-target="description"
    data-action="blur->world-editor#saveDescription"
    class="w-full px-4 py-3 bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 min-h-24 text-slate-100 placeholder-slate-500 transition-all duration-200 hover:bg-slate-800/70 resize-none"
    placeholder="Describe this room's atmosphere, features, and details..."><%= current_room.description if current_room.persisted? %></textarea>
</div>
