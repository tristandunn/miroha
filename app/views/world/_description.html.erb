<%# locals: (current_room:) %>
<div>
  <label class="block text-xs font-medium text-slate-400 mb-1.5 uppercase tracking-wide">Description</label>
  <textarea
    data-world-editor-target="description"
    data-action="blur->world-editor#saveDescription"
    class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded text-sm text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-600 focus:ring-1 focus:ring-slate-600 min-h-20 resize-none"
    placeholder="Room description..."><%= current_room.description if current_room.persisted? %></textarea>
</div>
