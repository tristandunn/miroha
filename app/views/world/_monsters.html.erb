<%# locals: (current_room:) %>
<% if current_room.persisted? && current_room.monsters.any? %>
  <div>
    <label class="block text-xs font-medium text-slate-400 mb-1.5 uppercase tracking-wide">
      Monsters (<%= current_room.monsters.count %>)
    </label>

    <div data-world-editor-target="monsterList" class="space-y-1">
      <% current_room.monsters.each do |monster| %>
        <div class="px-2 py-1.5 bg-slate-800 border border-slate-700 rounded text-sm hover:bg-slate-750 transition-colors group">
          <div class="flex items-start justify-between mb-1">
            <span class="text-slate-200">
              <%= monster.name %>
              <% if monster.spawn.present? %>
                <span class="ml-1.5 text-xs text-slate-500">(spawned)</span>
              <% end %>
            </span>
            <button
              data-action="click->world-editor#deleteMonster"
              data-id="<%= monster.id %>"
              data-spawned="<%= monster.spawn.present? %>"
              class="opacity-0 group-hover:opacity-100 text-xs text-slate-500 hover:text-red-400 transition-all">
              Ã—
            </button>
          </div>
          <div class="text-xs text-slate-500 space-x-3">
            <span>HP <%= monster.current_health %>/<%= monster.maximum_health %></span>
            <span>XP <%= monster.experience %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
