<%# locals: (current_room:) %>
<% if current_room.persisted? && current_room.monsters.any? %>
  <div class="group">
    <h3 class="text-sm font-semibold text-slate-300 mb-3 flex items-center gap-2">
      <svg class="w-4 h-4 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
      </svg>
      Monsters
    </h3>

    <!-- Monster List -->
    <div data-world-editor-target="monsterList" class="space-y-2">
      <% current_room.monsters.each do |monster| %>
        <div class="flex justify-between items-start p-3 bg-slate-800/50 backdrop-blur-sm rounded-lg border border-slate-700/50 text-sm text-slate-100 hover:bg-slate-800/70 transition-all group/item">
          <div class="flex items-start gap-3">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-red-500 to-orange-500 flex items-center justify-center text-white text-xs font-bold flex-shrink-0">
              <%= monster.name[0].upcase %>
            </div>
            <div>
              <div class="font-medium mb-1">
                <%= monster.name %>
                <% if monster.spawn.present? %>
                  <span class="ml-2 px-2 py-0.5 bg-violet-500/20 text-violet-300 text-xs rounded-full border border-violet-500/30">spawned</span>
                <% end %>
              </div>
              <div class="flex items-center gap-3 text-xs text-slate-400">
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                  </svg>
                  HP: <%= monster.current_health %>/<%= monster.maximum_health %>
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  XP: <%= monster.experience %>
                </span>
              </div>
            </div>
          </div>
          <button
            data-action="click->world-editor#deleteMonster"
            data-id="<%= monster.id %>"
            data-spawned="<%= monster.spawn.present? %>"
            class="opacity-0 group-hover/item:opacity-100 px-3 py-1.5 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg text-xs font-medium transition-all border border-red-500/30">
            Delete
          </button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
