<%# locals: (current_room:) %>
<div>
  <div class="flex items-center justify-between mb-1.5">
    <label class="text-xs font-medium text-slate-400 uppercase tracking-wide">
      Spawns
      <% if current_room.persisted? && current_room.spawns.any? %>
        <span class="ml-1 text-slate-500">(<%= current_room.spawns.count %>)</span>
      <% end %>
    </label>
    <button
      data-action="click->world-editor#toggleSpawnForm"
      class="px-2 py-0.5 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded text-xs text-slate-300 transition-colors">
      + Add
    </button>
  </div>

  <!-- Spawn Form -->
  <div class="hidden mb-2 p-2 bg-slate-800 border border-slate-700 rounded" data-world-editor-target="spawnForm">
    <select
      data-world-editor-target="spawnType"
      class="w-full px-2 py-1.5 bg-slate-900 border border-slate-700 rounded text-sm text-slate-100 focus:outline-none focus:border-slate-600 mb-2">
      <option value="">Type...</option>
      <option value="Npc">NPC</option>
      <option value="Monster">Monster</option>
    </select>
    <input
      type="number"
      data-world-editor-target="spawnBaseId"
      placeholder="Base ID"
      autocomplete="off"
      class="w-full px-2 py-1.5 bg-slate-900 border border-slate-700 rounded text-sm text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-600 mb-2">
    <div class="grid grid-cols-2 gap-2 mb-2">
      <input
        type="number"
        data-world-editor-target="spawnFrequency"
        placeholder="Freq (s)"
        autocomplete="off"
        class="w-full px-2 py-1.5 bg-slate-900 border border-slate-700 rounded text-sm text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-600">
      <input
        type="number"
        data-world-editor-target="spawnDuration"
        placeholder="Dur (s)"
        autocomplete="off"
        class="w-full px-2 py-1.5 bg-slate-900 border border-slate-700 rounded text-sm text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-600">
    </div>
    <div class="flex gap-1.5">
      <button
        data-action="click->world-editor#createSpawn"
        class="flex-1 px-2 py-1.5 bg-slate-700 hover:bg-slate-600 rounded text-xs text-slate-100 transition-colors">
        Create
      </button>
      <button
        data-action="click->world-editor#toggleSpawnForm"
        class="px-2 py-1.5 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded text-xs text-slate-400 transition-colors">
        Cancel
      </button>
    </div>
  </div>

  <!-- Spawn List -->
  <div data-world-editor-target="spawnList" class="space-y-1">
    <% if current_room.persisted? && current_room.spawns.any? %>
      <% current_room.spawns.includes(:base).find_each do |spawn| %>
        <div class="px-2 py-1.5 bg-slate-800 border border-slate-700 rounded text-sm hover:bg-slate-750 transition-colors group">
          <div class="flex items-start justify-between mb-1">
            <span class="text-slate-200">
              <%= spawn.base.name %>
              <span class="ml-1.5 text-xs text-slate-500">(<%= spawn.base_type %>)</span>
            </span>
            <button
              data-action="click->world-editor#deleteSpawn"
              data-id="<%= spawn.id %>"
              class="opacity-0 group-hover:opacity-100 text-xs text-slate-500 hover:text-red-400 transition-all">
              Ã—
            </button>
          </div>
          <div class="text-xs text-slate-500 space-x-3">
            <span>Freq <%= spawn.frequency %>s</span>
            <span>Dur <%= spawn.duration %>s</span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
