<%# locals: (current_room:) %>
<div class="w-72 flex-shrink-0 border-r border-slate-800 p-3 h-full overflow-y-auto flex flex-col">
  <div class="flex items-center justify-between mb-2">
    <label class="text-[10px] font-medium text-slate-500 uppercase tracking-wider">
      Spawns
      <% if current_room.persisted? && current_room.spawns.any? %>
        <span class="text-slate-600">(<%= current_room.spawns.count %>)</span>
      <% end %>
    </label>
    <button
      data-action="click->world-editor#toggleSpawnForm"
      class="px-1.5 py-0.5 bg-slate-800 hover:bg-slate-700 border border-slate-700 rounded text-[10px] text-slate-400 transition-colors">
      +
    </button>
  </div>

  <!-- Form -->
  <div class="hidden mb-2 p-2 bg-slate-950 border border-slate-800 rounded" data-world-editor-target="spawnForm">
    <select
      data-world-editor-target="spawnType"
      class="w-full px-2 py-1 bg-slate-900 border border-slate-800 rounded text-xs text-slate-100 focus:outline-none focus:border-slate-700 mb-1.5">
      <option value="">Type...</option>
      <option value="Npc">NPC</option>
      <option value="Monster">Monster</option>
    </select>
    <input
      type="number"
      data-world-editor-target="spawnBaseId"
      placeholder="Base ID"
      autocomplete="off"
      class="w-full px-2 py-1 bg-slate-900 border border-slate-800 rounded text-xs text-slate-100 placeholder-slate-600 focus:outline-none focus:border-slate-700 mb-1.5">
    <div class="grid grid-cols-2 gap-1.5 mb-1.5">
      <input
        type="number"
        data-world-editor-target="spawnFrequency"
        placeholder="Freq"
        autocomplete="off"
        class="w-full px-2 py-1 bg-slate-900 border border-slate-800 rounded text-xs text-slate-100 placeholder-slate-600 focus:outline-none focus:border-slate-700">
      <input
        type="number"
        data-world-editor-target="spawnDuration"
        placeholder="Dur"
        autocomplete="off"
        class="w-full px-2 py-1 bg-slate-900 border border-slate-800 rounded text-xs text-slate-100 placeholder-slate-600 focus:outline-none focus:border-slate-700">
    </div>
    <div class="flex gap-1">
      <button
        data-action="click->world-editor#createSpawn"
        class="flex-1 px-2 py-1 bg-slate-800 hover:bg-slate-700 rounded text-[10px] text-slate-200 transition-colors">
        Create
      </button>
      <button
        data-action="click->world-editor#toggleSpawnForm"
        class="px-2 py-1 text-[10px] text-slate-500 hover:text-slate-400 transition-colors">
        Cancel
      </button>
    </div>
  </div>

  <!-- List -->
  <div data-world-editor-target="spawnList" class="space-y-1 flex-1 overflow-y-auto">
    <% if current_room.persisted? && current_room.spawns.any? %>
      <% current_room.spawns.includes(:base).find_each do |spawn| %>
        <div class="px-2 py-1 bg-slate-950 border border-slate-800 rounded text-xs hover:bg-slate-900 transition-colors group">
          <div class="flex items-center justify-between mb-0.5">
            <span class="text-slate-300 truncate">
              <%= spawn.base.name %>
              <span class="text-[10px] text-slate-600">(<%= spawn.base_type %>)</span>
            </span>
            <button
              data-action="click->world-editor#deleteSpawn"
              data-id="<%= spawn.id %>"
              class="opacity-0 group-hover:opacity-100 text-xs text-slate-600 hover:text-red-500 transition-all ml-2">
              ×
            </button>
          </div>
          <div class="text-[10px] text-slate-600">
            <span><%= spawn.frequency %>s</span>
            <span class="mx-1">•</span>
            <span><%= spawn.duration %>s</span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
