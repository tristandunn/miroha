<%# locals: (current_room:) %>
<div class="mb-6">
  <h3 class="text-lg font-medium mb-2 text-gray-100">Monsters</h3>

  <!-- Monster List -->
  <div data-world-editor-target="monsterList" class="space-y-2">
    <% if current_room.persisted? %>
      <% current_room.monsters.each do |monster| %>
        <div class="flex justify-between items-center p-2 bg-gray-700 rounded text-sm text-white">
          <div>
            <div>
              <%= monster.name %>
              <% if monster.spawn.present? %>
                <span class="text-xs text-gray-400 ml-2">(spawned)</span>
              <% end %>
            </div>
            <div class="text-xs text-gray-200">HP: <%= monster.current_health %>/<%= monster.maximum_health %>, XP: <%= monster.experience %></div>
          </div>
          <button
            data-action="click->world-editor#deleteMonster"
            data-id="<%= monster.id %>"
            data-spawned="<%= monster.spawn.present? %>"
            class="text-red-400 hover:text-red-300"
          >Delete</button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
