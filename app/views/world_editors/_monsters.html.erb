<%# locals: (current_room:) %>
<div class="mb-6">
  <div class="flex justify-between items-center mb-2">
    <h3 class="text-lg font-medium text-gray-200">Monsters</h3>
    <button
      data-action="click->world-editor#toggleMonsterForm"
      class="px-2 py-1 bg-blue-600 hover:bg-blue-700 rounded text-sm text-white"
    >+ Add</button>
  </div>

  <!-- Monster Form (hidden by default) -->
  <div class="hidden mb-3 p-3 bg-gray-700 rounded" data-world-editor-target="monsterForm">
    <input
      type="text"
      data-world-editor-target="monsterName"
      placeholder="Monster Name"
      class="w-full px-2 py-1 bg-gray-800 border border-gray-600 rounded mb-2 text-sm text-gray-100"
    />
    <input
      type="number"
      data-world-editor-target="monsterHealth"
      placeholder="Health"
      class="w-full px-2 py-1 bg-gray-800 border border-gray-600 rounded mb-2 text-sm text-gray-100"
    />
    <input
      type="number"
      data-world-editor-target="monsterExperience"
      placeholder="Experience"
      class="w-full px-2 py-1 bg-gray-800 border border-gray-600 rounded mb-2 text-sm text-gray-100"
    />
    <div class="flex gap-2">
      <button
        data-action="click->world-editor#createMonster"
        class="px-3 py-1 bg-green-600 hover:bg-green-700 rounded text-sm text-white"
      >Create</button>
      <button
        data-action="click->world-editor#toggleMonsterForm"
        class="px-3 py-1 bg-gray-600 hover:bg-gray-500 rounded text-sm text-white"
      >Cancel</button>
    </div>
  </div>

  <!-- Monster List -->
  <div data-world-editor-target="monsterList" class="space-y-2">
    <% if current_room.persisted? %>
      <% current_room.monsters.each do |monster| %>
        <div class="flex justify-between items-center p-2 bg-gray-700 rounded text-sm text-gray-100">
          <div>
            <div><%= monster.name %></div>
            <div class="text-xs text-gray-300">HP: <%= monster.current_health %>/<%= monster.maximum_health %>, XP: <%= monster.experience %></div>
          </div>
          <button
            data-action="click->world-editor#deleteMonster"
            data-id="<%= monster.id %>"
            class="text-red-400 hover:text-red-300"
          >Delete</button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
