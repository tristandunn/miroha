<%# locals: (current_room:) %>
<div class="mb-6">
  <div class="flex justify-between items-center mb-2">
    <h3 class="text-lg font-medium text-gray-200">NPCs</h3>
    <button
      data-action="click->world-editor#toggleNpcForm"
      class="px-2 py-1 bg-blue-600 hover:bg-blue-700 rounded text-sm text-white"
    >+ Add</button>
  </div>

  <!-- NPC Form (hidden by default) -->
  <div class="hidden mb-3 p-3 bg-gray-700 rounded" data-world-editor-target="npcForm">
    <input
      type="text"
      data-world-editor-target="npcName"
      placeholder="NPC Name"
      class="w-full px-2 py-1 bg-gray-800 border border-gray-600 rounded mb-2 text-sm text-gray-100"
    />
    <div class="flex gap-2">
      <button
        data-action="click->world-editor#createNpc"
        class="px-3 py-1 bg-green-600 hover:bg-green-700 rounded text-sm text-white"
      >Create</button>
      <button
        data-action="click->world-editor#toggleNpcForm"
        class="px-3 py-1 bg-gray-600 hover:bg-gray-500 rounded text-sm text-white"
      >Cancel</button>
    </div>
  </div>

  <!-- NPC List -->
  <div data-world-editor-target="npcList" class="space-y-2">
    <% if current_room.persisted? %>
      <% current_room.npcs.each do |npc| %>
        <div class="flex justify-between items-center p-2 bg-gray-700 rounded text-sm text-gray-100">
          <span><%= npc.name %></span>
          <button
            data-action="click->world-editor#deleteNpc"
            data-id="<%= npc.id %>"
            class="text-red-400 hover:text-red-300"
          >Delete</button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
